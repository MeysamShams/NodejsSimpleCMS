<div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-align-center" style="font-size: 40px;"></i></div>
                <div class="count"><%= postsCount %></div>
                <h3>کل مطالب</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-comments-o" style="font-size: 40px;"></i></div>
                <div class="count"><%= commentsCount %></div>
                <h3>تعداد گفتگوها</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-user" style="font-size: 40px;"></i></div>
                <div class="count"> <%= teachersCount  %></div>
               
                <h3>تعداد اساتید</h3>
            </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon"><i class="fa fa-graduation-cap" style="font-size: 40px;"></i></div>
                <div class="count"><%= usersCount %></div>
                <h3>تعداد دانشجویان</h3>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>آخرین مطالب </h2>
                    <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">تنظیمات 1</a>
                                    </li>
                                    <li><a href="#">تنظیمات 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                        <div class="dashboard-widget-content">

                                <ul class="list-unstyled timeline widget">
                                   
                                    <% lastPosts.forEach(post=>{%> 
                                        
                                        
                                        <li>
                                            <div class="block">
                                                <div class="block_content">
                                                    <h2 class="title">
                                                        <a><%=post.title %></a>
                                                    </h2>
                                                    <div class="byline">
                                                        توسط <a><%= post.user.name %></a>
                                                    </div>
                                                    <p class="excerpt"><%=post.body.substr(0,150)  %>... 
                                                    </p>
                                                </div>
                                            </div>
                                        </li>

                                    <%})%>
                                
                                    
                                </ul>
                            </div>
                    
                </div>
            </div>
    </div>

    <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>آخرین نظرات </h2>
                    <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="#">تنظیمات 1</a>
                                    </li>
                                    <li><a href="#">تنظیمات 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                        <ul class="list-unstyled msg_list">

                                <%lastComments.forEach(com=>{%> 
                                    <li>
                                        <a>
                                    <span class="image">
                                      <img src="<%= com.user.profileImage %>" alt="img">
                                    </span>
                                            <span>
                                      <span><%= com.user.name %></span>
                                      <!-- <span class="time"><%=com.createdAt%></span> -->
                                    </span>
                                            <span class="message">
                                                <%= com.body %>
                                    </span>
                                        </a>
                                    </li>
                                <%})%>


                         
                          
                             
                            </ul>
                    
                </div>
            </div>
    </div>