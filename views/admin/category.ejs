                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="row">

                                <% allCats.forEach(cat=>{%> 
                                        <div class="col-md-3 col-sm-6" >
                                                <a href="/category/<%= cat.slug%>">

                                                <div class="image">
                                                    <img src="<%=cat.image %>" style="border-radius: 2px;" width="90" height="80" alt="">
                                                </div>
                                                <div class="caption" style="text-align: center;">
                                                    <%= cat.name %>
                                                </div>
                                            </a>

                                            </div>
                                <%})%>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>